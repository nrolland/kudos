<!DOCTYPE html>
<html>
<head>
  <title>Kudos</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%if current_user%>
<p>Welcome: <%= current_user.name%></p>	
<%end%>	

<% flash.each do |key, value| %>
  <div class="flash <%= key %>"><%= value %></div>
<% end %>

<%= yield %>
</body>
</html>
